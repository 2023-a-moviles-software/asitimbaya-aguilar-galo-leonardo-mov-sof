<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_CUPais"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CUPais">

    <TextView
        android:id="@+id/tv_CUPais"
        android:layout_width="296dp"
        android:layout_height="60dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="PaÃ­s"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <EditText
        android:id="@+id/input_idiomaPais"
        android:layout_width="271dp"
        android:layout_height="56dp"
        android:layout_marginTop="184dp"
        android:ems="10"
        android:hint="Ingrese el idioma"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_CUPais"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/tv_CUPais"
        app:layout_constraintTop_toBottomOf="@+id/tv_CUPais" />

    <EditText
        android:id="@+id/input_nombrePais"
        android:layout_width="271dp"
        android:layout_height="56dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="Ingrese el nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_CUPais"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/tv_CUPais"
        app:layout_constraintTop_toBottomOf="@+id/tv_CUPais" />

    <EditText
        android:id="@+id/input_precioDolar"
        android:layout_width="271dp"
        android:layout_height="56dp"
        android:layout_marginTop="372dp"
        android:ems="10"
        android:hint="Ingrese el precio de dolar"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_CUPais"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/tv_CUPais"
        app:layout_constraintTop_toBottomOf="@+id/tv_CUPais" />

    <EditText
        android:id="@+id/input_monedaPais"
        android:layout_width="271dp"
        android:layout_height="56dp"
        android:layout_marginTop="288dp"
        android:ems="10"
        android:hint="Ingrese la moneda"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_CUPais"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/tv_CUPais"
        app:layout_constraintTop_toBottomOf="@+id/tv_CUPais" />

    <Button
        android:id="@+id/btn_crearActualizar"
        android:layout_width="163dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/input_precioDolar"
        app:layout_constraintStart_toStartOf="@+id/input_precioDolar"
        app:layout_constraintTop_toBottomOf="@+id/input_precioDolar" />

</androidx.constraintlayout.widget.ConstraintLayout>